<%- include ../partials/auth/_header %>

<span class="marketing-heading-bordered">
<%- include ../partials/shared/_mkt_header %>
</span>

<div class="container" id="signUp">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-12 col-sm-offset-0">
      <div class="row">
        <div class="col-sm-6 col-sm-push-6 signUpForm" id="regForm">
          <h2>Welcome to Procur.<br/>Sign up for Early Access below:</h2>
          <form action="/register" id="signup-form" method="post">
            <div><input type="text" name="firstName" placeholder="First Name*"></div>
            <div><input type="text" name="lastName" placeholder="Last Name*"></div>
            <div><input type="text" name="email" placeholder="Business Email Address*"></div>
            <div><input type="password" name="password" id="signUpPassword" placeholder="Create a Password*"></div>
            <div><input type="password" name="passwordConfirm" placeholder="Create a Password*"></div>
            <div><button type="submit" id="data-register-button" class="registerButton">Create my account</button></div>
          </form>
          <div class="orText"><p>or</p></div>
          <div class="orLine"></div>
          <a class="loginButton" href="/auth/login"><button>Already have an account? Sign In.</button></a>
        </div>
        <div class="col-sm-6 col-sm-pull-6 moreInfo">
          <h1>We will be launching our full platform this summer. Get in before we launch by signing up for Early Access now.</h1>
          <div class="dottedLine"></div>
          <div class="featuresColumn">
            <h4>Features Currently Accessible In Early Access:</h4>
            <a class="realLink" href="/earlyaccess#ea-companyProfiles">
              <div class="rightSec">
                <div class="rightSecBox">
                  <i class="fa fa-user fa-fw"></i>
                </div>
              <h3 class="orangeButton">Company Profile</h3>
              </div>
            </a>

            <h4>Features Coming Soon:</h4>
            <a class="orangeWrap" href="/earlyaccess#ea-uploadPhotos">
              <div class="rightSec">
                <div class="rightSecBox">
                  <i class="fa fa-camera fa-fw"></i>
                </div>
                <h3 class="orangeButton">Company Photos</h3>
              </div>
            </a>

            <a class="orangeWrap" href="/earlyaccess#ea-supplierCapabilities">
              <div class="rightSec rightAlt">
                <div class="rightSecBox">
                  <i class="fa fa-tags fa-fw"></i>
                </div>
                <h3 class="orangeButton">Supplier Capabilities</h3>
              </div>
            </a>

            <a class="orangeWrap" href="/earlyaccess#ea-downloadableFiles">
              <div class="rightSec">
                <div class="rightSecBox">
                  <i class="fa fa-download fa-fw"></i>
                </div>
                <h3 class="orangeButton">Downloadable Files</h3>
              </div>
            </a>

            <a class="orangeWrap" href="/earlyaccess#ea-communityResources">
              <div class="rightSec rightAlt">
                <div class="rightSecBox">
                  <i class="fa fa-comments fa-fw"></i>
                </div>
                <h3 class="orangeButton">Community Resources</h3>
              </div>
            </a>

            <a class="orangeWrap" href="/earlyaccess#ea-productProfiles">
              <div class="rightSec">
                <div class="rightSecBox">
                  <i class="fa fa-th-large fa-fw"></i>
                </div>
                <h3 class="orangeButton">Product Profiles</h3>
              </div>
            </a>

            <h5><a href="/earlyaccess">Learn More About Early Access</a></h5>
            <div class="bottomRightClicker">
              <a id="registerNow" href="/signup">Register Now for Early Access</a>
              <h6 class="text-right last-text">Have questions? <a id="faqLink" href="/faq">View our FAQ ></a></h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

